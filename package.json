{
  "name": "2-player-something",
  "private": true,
  "version": "1.0.0",
  "description": "A 2-player game with Socket.IO",
  "scripts": {
    "dev": "concurrently \"pnpm run dev:server\" \"pnpm run dev:frontend\"",
    "dev:server": "pnpm --filter server dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "build": "pnpm run build:server && pnpm run build:frontend",
    "build:server": "pnpm --filter server build",
    "build:frontend": "pnpm --filter frontend build",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "pnpm run type-check:server && pnpm run type-check:frontend",
    "type-check:server": "pnpm --filter server type-check",
    "type-check:frontend": "pnpm --filter frontend type-check"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.4",
  "pnpm": {
    "overrides": {
      "esbuild": ">=0.25.0"
    }
  }
}